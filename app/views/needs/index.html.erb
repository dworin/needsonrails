<h1>Listing needs</h1>

<table>
  <tr>
    <th>Source</th>
    <th>Category</th>
    <th>Needtext</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @needs.each do |need| %>
  <tr>
    <td><%= need.source %></td>
    <td><%= need.category_id %></td>
    <td><%= need.needtext %></td>
    <td><%= need.latitude %></td>
    <td><%= need.longitude %></td>
    <td><%= link_to 'Show', need %></td>
    <td><%= link_to 'Edit', edit_need_path(need) %></td>
    <td><%= link_to 'Destroy', need, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

